<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CorreoTerminosYCondiciones">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido"
            android:layout_gravity="center"
            android:padding="28dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Ingrese su correo electronico"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="94dp" />



        <EditText
            android:id="@+id/ediCorreo"
            android:layout_width="343dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="134dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="357dp"
            android:layout_height="35dp"
            android:text="Si continuas estas aceptando los terminos y condiciones del servicio"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="196dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="188dp"
            android:layout_height="56dp"
            android:text="CONTINUAR"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="255dp"
            android:layout_gravity="center"
            android:onClick="pasar"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>